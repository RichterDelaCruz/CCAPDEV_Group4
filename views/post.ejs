<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <title>Post</title>
  <style>
    #likeButton {
      cursor: pointer;
    }

    /* Orange color */
    #likeButton:not(.liked) {
      color: #FFA500;
    }

    /* Darker orange color when liked */
    #likeButton.liked {
      color: #FF4500;
    }
  </style>
</head>
<ul>
  <li><a href="/homepage">Homepage</a></li>
  <li><a href="/users">Search Users</a></li>
  <li><a href="/login">Log out</a></li>
</ul>

<body>
  <h1>Post Details</h1>
  <div>
    <p> <img src="<%= post.user_id.profilePicture %>" alt="Profile Picture" style="max-width: 100px;">
      <strong>
        <%= post.user_id.username %>
      </strong>
      <%= post.timestamp %>
    </p>

    <p>
      <%= post.content %>
    </p>

  </div>

  <!-- Display the profile picture if it exists -->
  <% if (post.photo) { %>
    <img src="<%= post.photo %>" alt="Post Photo" style="max-width: 100px;">
  <% } else { %>
    <p>No photo for this post.</p>
  <% } %>
  <p>
    <strong>Likes:</strong>
    <span id="likesCount">
      <%= post.likes.length %>
    </span>
    <span id="likeButton" onclick="toggleLike('<%= post._id %>')" class="fa fa-thumbs-up"></span>
  </p>

  <!-- Comment form -->
  <form method="POST" action="/add-comment">
    <!-- Hidden input to store the post ID -->
    <input type="hidden" name="post_id" value="<%= post._id %>">
    <label for="content">Comment:</label>
    <input type="text" name="content" id="content">
    <input type="submit" value="Post Comment">
  </form>

  <!-- Display comments for this post if available -->
  <% if (post.comments && post.comments.length > 0) { %>
    <% post.comments.forEach((comment) => { %>
      <div>
        <p>
          <img src="<%= comment.user_id.profilePicture %>" style="max-width: 100px;">
          <strong><%= comment.username %>:</strong>
          <%= comment.timestamp %>:
          <%= comment.content %>
        </p>
      </div>
    <% }); %>
  <% } else { %>
    <p>No comments for this post.</p>
  <% } %>

  <script>
    // like.js
    function toggleLike(postId) {
                                const likesCountElement = document.getElementById(`likesCount_${postId}`);
                                const likeButton = document.getElementById(`likeButton_${postId}`);
                                const currentLikes = parseInt(likesCountElement.innerText);
                                
                                // Make a POST request to the server to toggle the like
                                fetch('/toggle-like', {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify({ postId }),
                                })
                                    .then((response) => response.json())
                                    .then((data) => {
                                        // Update the like count on the page
                                        likesCountElement.innerText = data.likesCount;
                                        // Toggle the text of the button between "Like" and "Unlike"
                                        likeButton.innerText = data.isLiked ? 'Unlike' : 'Like';
                                        // Change the color of the thumbs-up icon based on like/unlike status
                                        const likeIcon = document.querySelector(`#likeButton_${postId} i`);
                                        likeIcon.classList.toggle('liked', data.isLiked);
                                    })
                                    .catch((error) => {
                                        console.error('Error toggling like:', error);
                                    });
                            }
  </script>

</body>

</html>
