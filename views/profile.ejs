<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>

<body>
    <h1>Welcome, <%= user.username %>!</h1>

    <!-- Display the profile picture if it exists -->
    <% if (user.profilePicture) { %>
        <img src="<%= user.profilePicture %>" alt="Profile Picture">
        <% } else { %>
            <!-- Display a default profile picture if the user has not uploaded a custom picture -->
            <img src="/images/default-profile-picture.jpg" alt="Default Profile Picture">
            <p>No profile picture uploaded.</p>
            <% } %>

                <form method="POST" action="/profile" enctype="multipart/form-data">
                    <input type="file" name="image">
                    <input type="submit">
                </form>

                <!-- Form to create a new post -->
                <form method="POST" action="/create-post" enctype="multipart/form-data">
                    <label for="content">New Post:</label>
                    <input type="text" name="content" id="content">

                    <!-- Add a file input to upload a photo for the post -->
                    <label for="photo">Upload Photo:</label>
                    <input type="file" name="photo">
                    <input type="submit" value="Create Post">
                </form>
    
    <!-- Display all the posts -->
    <% posts.forEach((post) => { %>
        <div>
            <p><strong><%= post.user_id.username %>:</strong> <%= post.content %></p>
            <% if (post.photo) { %>
                <img src="<%= post.photo %>" alt="Post Photo">
            <% } %>
            <!-- Comment box for each post -->
            <form method="POST" action="/add-comment">
                <!-- Hidden input to store the post ID -->
                <input type="hidden" name="post_id" value="<%= post._id %>">
                <label for="content">Comment:</label>
                <input type="text" name="content" id="content">
                <input type="submit" value="Post Comment">
            </form>
            <!-- Display comments for this post if available -->
            <% if (post.comments && post.comments.length > 0) { %>
                <% post.comments.forEach((comment) => { %>
                    <div>
                        <p><strong><%= comment.username %>:</strong> <%= comment.content %></p>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No comments for this post.</p>
            <% } %>
        </div>
    <% }); %>
</body>
</html>